            <!-- validationRegex / -->
        </requiredProperty>
        <requiredProperty key="generatedGroupId">
            <defaultValue>com.github.mshin</defaultValue>
            <!-- validationRegex / -->
        </requiredProperty>
        <requiredProperty key="generatedArtifactId">
            <defaultValue>emprogen-generated-jakarta-api</defaultValue>
            <!-- validationRegex / -->
